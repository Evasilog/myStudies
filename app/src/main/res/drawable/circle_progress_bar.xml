<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="16"
            android:useLevel="false">
            <solid android:color="#DDD" />
            <padding
                android:top="0dp"
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0">
            <shape
                android:shape="ring"
                android:thicknessRatio="16"
                android:useLevel="true">
                <gradient
                    android:endColor="@color/primary"
                    android:startColor="@color/primary"
                    android:type="sweep" />
                <padding
                    android:top="0dp"
                    android:bottom="0dp"
                    android:left="0dp"
                    android:right="0dp" />
            </shape>
        </rotate>
    </item>
</layer-list>