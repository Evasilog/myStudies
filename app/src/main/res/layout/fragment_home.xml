<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/statsStatsFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/progressBarFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/numericStatsFrame"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="@style/circle_progress_bar"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_margin="0dp"
                                android:indeterminateOnly="false"
                                android:padding="0dp"
                                android:progress="50"
                                android:rotation="-90"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/progress_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/progress_value"
                                android:textColor="@color/primary"
                                android:textSize="28sp"
                                app:layout_constraintBottom_toTopOf="@id/progress_label"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/progress_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ects"
                                android:textColor="@color/primary"
                                android:textSize="13sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/progress_value" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/numericStatsFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/progressBarFrame"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableLayout
                                android:id="@+id/tableLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:id="@+id/weighted_grade_average_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/weighted_grade_average"
                                        android:textColor="@color/primary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/weighted_grade_average_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/weighted_grade_average_value"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/primary"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:id="@+id/grade_average_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="start|center"
                                        android:text="@string/grade_average"
                                        android:textColor="@color/primary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/grade_average_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:gravity="end|center"
                                        android:text="@string/grade_average_value"
                                        android:textColor="@color/primary"
                                        android:textSize="16sp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:id="@+id/passed_courses_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="start|center"
                                        android:text="@string/passed_courses"
                                        android:textColor="@color/primary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/passed_courses_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:gravity="end|center"
                                        android:text="@string/passed_courses_value"
                                        android:textColor="@color/primary"
                                        android:textSize="16sp" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/passed_ects_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="start|center"
                                        android:text="@string/passed_ects"
                                        android:textColor="@color/primary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/passed_ects_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:gravity="end|center"
                                        android:text="@string/passed_ects_value"
                                        android:textColor="@color/primary"
                                        android:textSize="16sp" />
                                </TableRow>
                            </TableLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="400dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:fabCustomSize="48dp"
        app:shapeAppearanceOverlay="@style/fab_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        android:contentDescription="@string/new_course" />

</androidx.constraintlayout.widget.ConstraintLayout>